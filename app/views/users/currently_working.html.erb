<% provide(:title, "出勤社員一覧") %>
<h1>出勤中社員一覧</h1>

<table class="table table-striped table-bordered table-condensed table-hover user-table">
  <thead>
    <tr>
      <th class="col-xs-4">社員番号</th>
      <th class="col-xs-8">名前</th>
    </tr>
  </thead>
  
  <tbody>
    <% @working_users.each do |working_user| %>
      <% working_user.attendances.each do |worker| %>
        <% if worker.worked_on == Date.today && worker.started_at.present? && worker.finished_at.blank? %>
          <tr>
            <td><%= working_user.employee_number %></td>
            <td><%= working_user.name %></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
  
</table>
