<% provide(:title, @user.name) %>
<div class="container">
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <div class="btn-users-show">
          <%= link_to "◀️️", user_path(params: {id: @user.id, first_day: @first_day.prev_month }), class: "btn btn-primary btn-xs" %>
          <%= l(@first_day, format: :long) %> 時間管理表
          <%= link_to "▶︎️", user_path(params: {id: @user.id, first_day: @first_day.next_month }), class: "btn btn-primary btn-xs" %>
        </div>
      </td>
      
      <td>指定勤務開始時間　<%= format_basic_info(@user.designated_work_start_time) %></br>
          指定勤務終了時間　<%= format_basic_info(@user.designated_work_end_time) %></td>
      <td colspan="3">基本時間　<%= format_basic_info(@user.basic_time) %></td>
      <td>初日　<%= l(@first_day, format: :short1) %></td>
    </tr>
    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未設定" %></td>
      <td>氏名：<%= @user.name %></td>
      <td>コード</td>
      <td>5555</td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>締日　<%= l(@last_day, format: :short1) %></td>
    </tr>
  </table>
</div>
<%= link_to "【所属長承認申請のお知らせ】", "#" %></br>
<%= link_to "【勤怠変更申請のお知らせ】", "#" %></br>
<%= link_to "【残業申請のお知らせ】", "#" %>
<!--勤怠編集、CSV出力、勤怠修正ログのボタン-->
<div class="csv-edit-button">
  <%= link_to "勤怠を編集", edit_attendances_path(@user, @first_day), class: "btn btn-primary btn-primary" %>
  <%= link_to "CSV出力", "#", class: "btn btn-primary btn-primary" %>
  <%= link_to "勤怠修正ログ(承認済み)", "#", class: "btn btn-primary btn-primary" %>
</div>
<table class="table table-striped table-bordered table-condensed table-hover user-table">
  <thead>
    <tr>
      <th rowspan="3">残業申請</th>
      <th rowspan="3">日付</th>
      <th rowspan="3">曜日</th>
      <th colspan="8">実績</th>
      <th colspan="8">所定外勤務</th>
    </tr>
    <tr>
      <th colspan="3">出社</th>
      <th colspan="3">退社</th>
      <th rowspan="2">在社時間</th>
      <th rowspan="2">備考</th>
      <th colspan="2">終了予定時間</th>
      <th rowspan="2">時間外時間</th>
      <th rowspan="2">業務処理内容</th>
      <th rowspan="2">指示者確認㊞</th>
    </tr>
    <tr>
      <th>時</th>
      <th>分</th>
      <th></th> 
      <th>時</th>
      <th>分</th>
      <th></th>
      <th>時</th>
      <th>分</th>
    </tr>
  </thead>
  
  <tbody>
    <% @dates.each do |day| %>
      <tr>
        <td><%= link_to "残業申請", "#", class: "btn btn-primary" %></td>
        <td><%= l(day.worked_on, format: :short1) %></td>
        <td>
          <% %w{日 月 火 水 木 金 土}[day.worked_on.wday] %>
          <!--if文でwdayが0か6（土か日曜日）だったらの時の処理-->
          <% if day.worked_on.wday == 0 %>
            <font color="red"><%= %w{日 月 火 水 木 金 土}[day.worked_on.wday] %></font>
          <% elsif day.worked_on.wday == 6 %>
            <font color="blue"><%= %w{日 月 火 水 木 金 土}[day.worked_on.wday] %></font>
          <% else %>
            <font><%= %w{日 月 火 水 木 金 土}[day.worked_on.wday] %></font>
          <% end %>
        </td>
        <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
        <td><%= l(day.started_at.floor_to(15.minutes), format: :min) if day.started_at.present? %></td>
        <td>
          <% if day.worked_on == Date.today && day.started_at.nil? %>
            <%= button_to "出社", user_attendances_path(@user), class: "btn btn-primary btn-sm" %>
          <% end %>
        </td>
        <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
        <td><%= l(day.finished_at.floor_to(15.minutes), format: :min) if day.finished_at.present? %></td>
        <td>
          <% if day.worked_on == Date.today && day.started_at.present? && day.finished_at.nil? %>
            <%= button_to "退社", user_attendances_path(@user), class: "btn btn-primary btn-sm" %>
          <% end %>
        </td>
        <td>
          <!--総合勤務時間-->
          <% if day.started_at.present? && day.finished_at.present? %>
            <%= working_times(day.started_at.floor_to(15.minutes), day.finished_at.floor_to(15.minutes)) %>
            <% seconds = (day.finished_at.floor_to(15.minutes) - day.started_at.floor_to(15.minutes)).to_i %>
            <% @total_seconds = @total_seconds.to_i + seconds %>
          <% end %>
        </td>
        <td><%= day.note %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3"></td>
      <td colspan="6">総合勤務時間 <%= format_basic_info(@user.basic_time).to_f * @worked_sum %>h</td>
      <td colspan="2">在社時間合計 <%= working_times_sum(@total_seconds.floor_to(15.minutes)) unless @total_seconds.nil? %>h</td>
      <td colspan="4"></td>
      <td>
        <%= form_with model: @user, local: true do |f| %>
          <%= render 'shared/error_messages' %>
            <div class="form-group">
              <label for="select1a">所属長承認 未</label>
              <select id="select1a" class="form-control">
                <option>上長A</option>
                <option>上長B</option>
                <option>上長C</option>
              </select>
              <select id="select1a" class="form-control">
                <option>1月</option>
                <option>2月</option>
                <option>3月</option>
                <option>4月</option>
                <option>5月</option>
                <option>6月</option>
                <option>7月</option>
                <option>8月</option>
                <option>9月</option>
                <option>10月</option>
                <option>11月</option>
                <option>12月</option>
              </select>
            </div>
            <div class="btn-attendances-center">
              <%= f.submit "申請", class: "btn btn-primary" %>
            </div>
          <% end %>
      </td>
    </tr>
  </tfoot>
</table>