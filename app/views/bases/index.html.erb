<% provide(:title, "拠点一覧") %>

<h1>拠点一覧</h1>

<table class="table table-striped table-bordered table-condensed table-hover base-table">
  <thead>
    <tr>
      <th class="col-xs-1"></th>
      <th class="col-xs-1"></th>
      <th class="col-xs-3">拠点番号</th>
      <th class="col-xs-3">拠点名</th>
      <th class="col-xs-4">拠点種類</th>
    </tr>
  </thead>
  <tbody>
    <% @bases.each do |base| %>
      <tr>
        <td><%= link_to "修正", edit_basis_path(base.id), class: "btn btn-primary" %></td>
        <td>
           <%= link_to "削除", base, method: :delete, class: "btn btn-primary",
                       data: { confirm: "削除しますか?" } %><br>
        </td>
        <td><%= base.base_number %></td>
        <td><%= base.base_name %></td>
        <td><%= base.attendance_type %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="5">
        <%= link_to "拠点追加", new_basis_path, class: "btn btn-primary base-btn" %>
      </td>
    </tr>
  </tbody>
</table>

